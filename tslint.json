{
  "rules": {
    "class-name": true,
    "curly": true, // if,for,do,while 强制括号
    "forin": true, // for ... in 需要检查,建议使用Object.keys改写城 for of
    "import-blacklist": true,
    "jsdoc-format": true,
    "label-position": true,
    "member-access": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-eval": true,
    "no-namespace": [true, "allow-declarations"],
    "no-invalid-this": false,
    "no-object-literal-type-assertion": true,
    "no-require-imports": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-this-assignment": [true, {
      "allow-destructuring": true
    }],
    "no-unused-expression": true,
    "no-unused-variable": true,
    "no-var-keyword": true,
    "no-var-requires": true,
    "prefer-const": true,
    "prefer-for-of": true,
    "quotemark": false, // 行末分号检查
    "radix": true,
    "semicolon": false,
    "switch-default": true,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "ban-keywords"
    ]
  }
}
